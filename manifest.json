{
  "manifest_version": 2,
  "name": "Stupid Proof",
  "version": "0.1",
  "description": "『防蠢』知乎内容过滤插件",
  "background" : {
    "scripts" : ["lib/background/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*.zhihu.com/*"],
      "js": [
        "lib/content-scripts/storage-init.js",
        "lib/content-scripts/mutation-summary.js",
        "lib/content-scripts/filter.js"
      ]
    }
  ],
  "page_action": {
    "default_icon": "icon.png",
    "default_title": "Stupid Proof",
    "default_popup": "lib/popup.html"
  },
  "permissions": [
    "declarativeContent",
    "storage"
  ]
}
